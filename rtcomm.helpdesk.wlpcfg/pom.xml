<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://maven.apache.org/POM/4.0.0"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
	http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>net.wasdev.wlp.sample</groupId>
		<artifactId>sample.rtcomm.helpdesk</artifactId>
		<version>1.0-SNAPSHOT</version>
	</parent>

	<groupId>sample.rtcomm.helpdesk</groupId>
	<artifactId>rtcomm.helpdesk.wlpcfg</artifactId>
	<name>RtcommHelpdesk Server Assembly</name>
	<packaging>liberty-assembly</packaging>

	<dependencies>
		<dependency>
			<groupId>sample.rtcomm.helpdesk</groupId>
			<artifactId>rtcomm.helpdesk.app</artifactId>
			<version>1.0-SNAPSHOT</version>
			<type>war</type>
		</dependency>
	</dependencies>

	<build>
		<plugins>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.10</version>
				<executions>
					<execution>
						<id>copy-server-files</id>
						<phase>process-resources</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<includeArtifactIds>server-snippet</includeArtifactIds>
					<prependGroupId>true</prependGroupId>
					<outputDirectory>${project.build.directory}/wlp/usr/servers/${wlpServerName}/apps</outputDirectory>
				</configuration>
			</plugin>


			<plugin>

				<groupId>net.wasdev.wlp.maven.plugins</groupId>
				<artifactId>liberty-maven-plugin</artifactId>
				<version>1.1</version>

				<extensions>true</extensions>

				<configuration>
					<serverName>${wlpServerName}</serverName>

					<assemblyInstallDirectory>${project.build.directory}</assemblyInstallDirectory>
					<configFile>${basedir}/servers/${wlpServerName}/server.xml</configFile>
					<appsDirectory>apps</appsDirectory>
					<stripVersion>true</stripVersion>
					<include>usr</include>

					<bootstrapProperties>
						<mqtt.server.hostname>${mqttServerHostname}</mqtt.server.hostname>
						<rtcomm.topic.path>${rtcommTopicPath}</rtcomm.topic.path>
						<mqtt.server.port>${mqttServerPort}</mqtt.server.port>

					</bootstrapProperties>
					
					  <features>
                        <acceptLicense>true</acceptLicense>
                        <feature>rtcomm-1.0</feature>
                    </features>
				</configuration>

				<executions>
					<execution>
						<id>start-server</id>
						<phase>pre-integration-test</phase>
						<goals>
							<goal>start-server</goal>
						</goals>
					</execution>
					<execution>
						<id>stop-server</id>
						<phase>post-integration-test</phase>
						<goals>
							<goal>stop-server</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<!-- Should execute protractor tests here -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.4.0</version>
				<executions>
					<execution>
						<id>executing protractor</id>
						<phase>integration-test</phase>
						<goals>
							<goal>exec</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<workingDirectory>${basedir}</workingDirectory>
					<executable>npm</executable>
					<arguments>
						<argument>test</argument>
					</arguments>
				</configuration>
			</plugin>
		</plugins>

	</build>
	<profiles>
	
	<profile>
			<id>hard</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-clean-plugin</artifactId>
						<version>3.0.0</version>
						<configuration>
							<filesets>
								<fileset>
									<includes>
										<include>**/node/**</include>
									</includes>
									<followSymlinks>false</followSymlinks>
								</fileset>
							</filesets>
						</configuration>
					</plugin>
				</plugins>

			</build>
		</profile>
		<profile>
			<id>stopServer</id>
			<build>
				<plugins>
					<!-- Enable liberty-maven plugin -->
					<plugin>
						<groupId>net.wasdev.wlp.maven.plugins</groupId>
						<artifactId>liberty-maven-plugin</artifactId>
						<version>1.1</version>

						<extensions>true</extensions>

						<configuration>
							<serverName>${wlpServerName}</serverName>
							<configFile>${basedir}/servers/${wlpServerName}/server.xml</configFile>
							<nclude>usr</nclude>

							<assemblyInstallDirectory>${project.build.directory}</assemblyInstallDirectory>
							<bootstrapProperties>
								<mqtt.server.hostname>${mqttServerHostname}</mqtt.server.hostname>
								<rtcomm.topic.path>${rtcommTopicPath}</rtcomm.topic.path>
								<mqtt.server.port>${mqttServerPort}</mqtt.server.port>

							</bootstrapProperties>
							<install />
						</configuration>
						<executions>
							<execution>
								<id>stop-server-clean</id>
								<phase>pre-clean</phase>
								<goals>
									<goal>stop-server</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
